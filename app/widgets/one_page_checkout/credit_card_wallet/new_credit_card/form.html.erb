<%= widget_div(data: { hook: 'opco-new-credit-card' }) do %>
  <%= semantic_form_for credit_card_form, url: url_for_event(:create_credit_card), remote: true do |f| %>
    <%= f.inputs do %>
      <%= f.input :user_id, as: :hidden, input_html: { value: user.id } %>
      <%= f.input :number, label: t(:card_number) %>

      <%= f.input :month, as: :select, label: t(:expiration_month),
            include_blank: false, collection: 1..12 %>
      <%= f.input :year, as: :select, label: t(:expiration_year),
            include_blank: false, collection: (Date.today.year..(Date.today.advance(years: 15).year)) %>

      <%= f.input :verification_value, label: t(:verification_value) %>
    <%- end %>

    <%= f.actions do %>
      <%= f.action :submit, label: 'Save' %>
    <% end %>
  <% end  %>
<% end %>
