<%= widget_div(tag: :ul, data: { hook: 'opco-address-book' }) do %>
  <%= @user.addresses.each do |address| %>
    <%= content_tag(:li, class: css_classes_for(address)) do %>
      <%= render_widget existing_address_widget_id, :display, address %>
    <% end %>
  <% end %>

  <%= content_tag(:li) do %>
    <%= render_widget new_address_widget_id, :call_to_action %>
  <% end %>
<% end %>
