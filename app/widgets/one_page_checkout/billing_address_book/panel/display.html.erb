<%= widget_div(tag: :ul, data: { hook: 'opco-address-book' }) do %>
  <% @user.addresses.each do |address| %>
    <%= content_tag(:li, class: css_classes_for(address)) do %>
      <%= render_widget :billing_address_book_entry, :display, address %>
    <% end %>
  <% end %>

  <%= content_tag(:li) do %>
    <%= render_widget :new_billing_address_book_entry, :call_to_action %>
  <% end %>
<% end %>
